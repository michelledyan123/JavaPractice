package Assignment1;

import java.util.*;
import java.lang.*;


public class Assignment1b {

	public static void main(String[] args) {
		String carUserInputChk;
		Map<String, String> car = new HashMap<String, String>();
		
        
        car.put("Honda","CRV");
        car.put("Toyota","RAV4");
        car.put("BMW","X5");
        car.put("Mazda","CX5");
        car.put("Audi","Q5");
		
        Scanner userdata = new Scanner(System.in);
        System.out.print("Enter car make with 1st character as uppercase: ");
        String strCarKey = null;
        if (userdata.hasNextLine()) {
        	strCarKey = userdata.nextLine();
        }
        
        if (strCarKey != null) {
        	
        	carUserInputChk = car.get(strCarKey);
        	if (carUserInputChk == null) {
        		System.out.print("Car make does not exist");
        	} else {
        		System.out.println(car.get(strCarKey));
        		Set<Map.Entry<String, String>> cars = car.entrySet();
        		for (Map.Entry<String, String> entry : cars) {
        			String key = entry.getKey();
        			String value = entry.getValue();
        			System.out.println(key + ":" + value);
        		}
        	}
        	
        }
	}

}
